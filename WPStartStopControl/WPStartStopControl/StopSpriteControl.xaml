<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="WPStartStopControl.StopSpriteControl"
	d:DesignWidth="100" d:DesignHeight="100">

	<Grid x:Name="LayoutRoot" Background="Transparent">
		<Rectangle x:Name="StopSprite1" Stroke="Black"  UseLayoutRounding="False" d:LayoutRounding="Auto">
			<Rectangle.RenderTransform>
				<CompositeTransform Rotation="0"/>
			</Rectangle.RenderTransform>
			<Rectangle.Fill>
				<LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
					<GradientStop Color="#FFEB9A9A" Offset="0.058" />
					<GradientStop Color="#FFF54735" Offset="1" />
				</LinearGradientBrush>
			</Rectangle.Fill>
		</Rectangle>
        <Rectangle x:Name="StopSprite2"  Stroke="Black">
			<Rectangle.Fill>
				<LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
					<GradientStop Color="#FFEB9A9A" Offset="0.058" />
					<GradientStop Color="#FFF54735" Offset="1" />
				</LinearGradientBrush>
			</Rectangle.Fill>
		</Rectangle>
		
	</Grid>
</UserControl>